<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/disetupian1"
    android:scaleType="fitXY">
    <com.punuo.sys.app.agedcare.ui.TitleLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.punuo.sys.app.agedcare.ui.TitleLayout>

    <FrameLayout
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <com.punuo.sys.app.agedcare.view.CircleImageView
            android:src="@drawable/waiquanliangcen"
            android:layout_width="320px"
            android:layout_height="320px"

            />
        <com.punuo.sys.app.agedcare.view.CircleImageView
            android:id="@+id/CI_avatar"

            android:layout_width="260px"
            android:layout_height="260px"
            android:layout_gravity="center"


            />
    </FrameLayout>
    <TextView
        android:id="@+id/name"
        android:text="名字"
        android:textColor="@color/white"
        android:textSize="100px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

        <Button
            android:id="@+id/bt_cancle"
            android:layout_width="278px"
            android:layout_height="131px"
            android:layout_gravity="center"
            android:layout_marginTop="45px"
            android:background="@drawable/yuanjiao"
            android:text="取消"
            android:textColor="@color/white"
            android:textSize="65px"
            />



</LinearLayout>


