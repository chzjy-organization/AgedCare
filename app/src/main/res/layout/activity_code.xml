<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/dise"
    android:orientation="vertical">
    <com.punuo.sys.app.agedcare.ui.TitleLayout2
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.punuo.sys.app.agedcare.ui.TitleLayout2>

    <android.support.v7.widget.CardView
        android:layout_width="1200px"
        android:layout_height="626px"
        android:layout_marginTop="34dp"
        android:layout_gravity="center"
        app:cardCornerRadius="20dp"
        app:elevation="10dp">

    <ImageView
        android:src="@drawable/diseqian"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_gravity="center_vertical"
           android:layout_marginLeft="16.8dp"

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <ImageView
        android:background="@drawable/codebackground"
        android:id="@+id/code_image"
        android:layout_width="279px"
        android:layout_height="279px"
        android:scaleType="fitXY"

        />

    <Button
        android:layout_marginLeft="16.8dp"
        android:background="@drawable/yuanjiaobai"
        android:text="设置"
        android:textColor="@color/titile"
        android:textSize="50dp"
        android:layout_width="279px"
        android:layout_height="279px"

        android:id="@+id/settingbutton" />

        <Button
            android:layout_marginLeft="16.8dp"
            android:background="@drawable/yuanjiaobai"
            android:text="检查更新"
            android:id="@+id/update"
            android:textColor="@color/titile"
            android:layout_width="279px"
            android:layout_height="279px"
            android:textSize="50dp"/>
            <ImageView
                android:layout_marginLeft="16.8dp"
                android:background="@drawable/codebackground"
                android:id="@+id/code_download"
                android:layout_width="279px"
                android:layout_height="279px"
                android:scaleType="fitXY"

                />
            </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
