<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#00FFFFFF"
    tools:context=".vi.activity.VoiceUiActivity">

    <!-- 弹窗对话 -->
    <RelativeLayout
        android:id="@+id/virl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/virl_voice"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/vishape_bg"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/viiv_voiceicon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/nsdk_voice_awake_icon_00010" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="5dp"
                android:gravity="center_vertical"
                android:text="小亲正在听："
                android:textColor="#ffffffff" />

        </LinearLayout>

        <ImageView
            android:id="@+id/viiv_voiceclose"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_margin="25dp"
            android:src="@mipmap/nsdk_voice_aid_close" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/vitv_voicehint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="你可以对我说"
                android:textColor="#ffffffff"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/vitv_voicecontent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="''来聊天吧''"
                android:textColor="#ffffffff"
                android:textSize="16sp" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>