<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_phonecall"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/dise"
    tools:context="com.punuo.sys.app.agedcare.ui.addressAddActivity">
    <com.punuo.sys.app.agedcare.ui.TitleLayout2
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.punuo.sys.app.agedcare.ui.TitleLayout2>
    <android.support.v7.widget.CardView
        android:layout_width="1200px"
        android:layout_height="626px"
        android:layout_marginTop="34dp"
        android:layout_gravity="center"
        app:cardCornerRadius="20dp"
        app:elevation="10dp">
    <ImageView
        android:src="@drawable/diseqian"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/diseqian">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <com.punuo.sys.app.agedcare.view.CircleImageView
            android:layout_marginLeft="20dp"
            android:id="@+id/selectavator"
            android:src="@drawable/defaultavator"
            android:layout_width="150dp"
            android:layout_height="150dp"

            />
            <Button
                android:layout_gravity="center_vertical"
                android:id="@+id/takePhoto_avator"
                android:background="@drawable/em_actionbar_camera_icon"
                android:layout_width="50dp"
                android:layout_height="50dp" />
        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="40sp"
                android:text="联系人 ：   "
                android:textColor="@color/titile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <!--<EditText-->
                <!--android:textSize="40sp"-->
                <!--android:id="@+id/edit_name"-->
                <!--android:background="@null"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content" />-->
        <TextView
            android:textSize="40sp"
            android:background="@drawable/yuanjiaobai"
            android:id="@+id/edit_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="点击输入姓名"/>
        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="40sp"
                android:text="电话号码："
                android:textColor="@color/titile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <!--<EditText-->
                <!--android:textSize="40sp"-->
                <!--android:id="@+id/edit_number"-->
                <!--android:background="@null"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content" />-->
        <TextView
            android:textSize="40sp"
            android:background="@drawable/yuanjiaobai"
            android:id="@+id/edit_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="点击输入号码"/>
        </LinearLayout>
        <Button
            android:layout_gravity="center_horizontal"
            android:textSize="40sp"
            android:background="@drawable/yuanjiaobai"
            android:id="@+id/add"
            android:layout_marginTop="50dp"
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:text="添加"
            android:gravity="center"
            android:textColor="@color/titile"
            />
    </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
